<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrls="clr-namespace:Latrunculi.GUI.Controls">

    <Style TargetType="{x:Type ctrls:Board}">
        <Setter Property="MinHeight" Value="192"/>
        <Setter Property="MinWidth" Value="192"/>
        <Setter Property="ItemsSource" Value="{Binding Rows}"/>
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <ctrls:Row ItemsSource="{Binding Squares}" SquareSize="{Binding RelativeSource={RelativeSource AncestorType=ctrls:Board}, Path=SquareSize}"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ctrls:Board}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ItemsPresenter/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type ctrls:Row}">
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <ctrls:Square Height="{Binding RelativeSource={RelativeSource AncestorType=ctrls:Row}, Path=SquareSize}"
                                  Width="{Binding RelativeSource={RelativeSource AncestorType=ctrls:Row}, Path=SquareSize}"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ctrls:Row}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ItemsPresenter/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type ctrls:Square}">
        <Style.Resources>
            <SolidColorBrush x:Key="scWhite" Color="WhiteSmoke"/>
            <SolidColorBrush x:Key="scBlack" Color="DarkGray"/>

            <DataTemplate x:Key="ptNone">
                <Ellipse Stroke="Transparent" Margin="5,5,5,5">
                    <Ellipse.Fill>
                        <SolidColorBrush Color="Transparent"/>
                    </Ellipse.Fill>
                </Ellipse>
            </DataTemplate>
            <DataTemplate x:Key="ptWhite">
                <Ellipse Stroke="Black" Margin="5,5,5,5">
                    <Ellipse.Fill>
                        <SolidColorBrush Color="White"/>
                    </Ellipse.Fill>
                </Ellipse>
            </DataTemplate>
            <DataTemplate x:Key="ptBlack">
                <Ellipse Stroke="White" Margin="5,5,5,5">
                    <Ellipse.Fill>
                        <SolidColorBrush Color="Black"/>
                    </Ellipse.Fill>
                </Ellipse>
            </DataTemplate>

            <Style x:Key="sqStyle" TargetType="{x:Type Rectangle}">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Path=SquareColor}" Value="scWhite">
                        <Setter Property="Fill" Value="{StaticResource scWhite}" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Path=SquareColor}" Value="scBlack">
                        <Setter Property="Fill" Value="{StaticResource scBlack}" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="ccStyle" TargetType="{x:Type ContentControl}">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Path=PieceType}" Value="ptNone">
                        <Setter Property="ContentTemplate" Value="{StaticResource ptNone}" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Path=PieceType}" Value="ptWhite">
                        <Setter Property="ContentTemplate" Value="{StaticResource ptWhite}" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Path=PieceType}" Value="ptBlack">
                        <Setter Property="ContentTemplate" Value="{StaticResource ptBlack}" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Style.Resources>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ctrls:Square}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <Rectangle Style="{StaticResource sqStyle}"/>
                            <ContentControl Content="{Binding}" Style="{StaticResource ccStyle}"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
