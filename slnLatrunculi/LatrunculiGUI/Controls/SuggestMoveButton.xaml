<Button x:Class="Latrunculi.GUI.Controls.SuggestMoveButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ctrls="clr-namespace:Latrunculi.GUI.Controls"
             xmlns:local="clr-namespace:Latrunculi.GUI"
             mc:Ignorable="d" Height="24" Width="24"
             VerticalAlignment="Center"
             ToolTip="Napovědět tah">
    <Button.Resources>
        <Style TargetType="Image">
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.4" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Button.Resources>

    <Image Source="/CommandIcons/SuggestMove.png"/>
</Button>
