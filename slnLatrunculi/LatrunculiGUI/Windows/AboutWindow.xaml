<Window x:Class="Latrunculi.GUI.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Latrunculi.GUI"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Title="O aplikaci" Height="Auto" Width="300" SizeToContent="Height">
    <StackPanel Orientation="Vertical">
        <TextBlock Text="Latrunculi" FontWeight="SemiBold" Foreground="Navy" FontSize="18" Margin="10,10,10,10"/>
        <TextBlock Text="Verze: 3.0" Margin="10,0,10,5"/>
        <TextBlock Text="Copyright © Ondřej Grätz 2016" Margin="10,0,10,5"/>
        <Separator/>
        <TextBlock Text="Přírodovědecká fakulta, katedra informatiky" FontStyle="Italic" Margin="10,5,10,5"/>
        <TextBlock Text="Univerzita Palackého Olomouc" Margin="10,0,10,5"/>
        <Separator/>
        <Button Content="OK" IsDefault="True" Click="Button_Click" HorizontalAlignment="Center" Padding="20,2,20,2" Margin="0,10,0,10"/>
    </StackPanel>
</Window>
